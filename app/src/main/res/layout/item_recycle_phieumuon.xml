<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"

    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="#CC05ED"
      >
      <LinearLayout

          android:orientation="vertical"
          android:padding="10dp"
          android:layout_width="300dp"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/txtMaPM"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtMaTV"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtTenTV"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtMaTT"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtTenTT"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtMaSach"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtTenSach"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtNgay"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txTrangThai"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtTienThue"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/txtbienLai"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>


          <Button
              android:id="@+id/btnTraSach"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:backgroundTint="@android:color/holo_orange_dark"
              android:text="Tra Sach"/>

      </LinearLayout>


      <LinearLayout
          android:layout_width="100dp"
          android:layout_height="300dp"
          android:orientation="vertical"
          >
          <Button
              android:id="@+id/btnDelete"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:backgroundTint="@android:color/holo_red_light"

              android:text="XÃ³a" />
          <Button
              android:id="@+id/btnUpdate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:backgroundTint="@android:color/holo_blue_bright"

              android:text="Sua" />
      </LinearLayout>
  </LinearLayout>



</androidx.cardview.widget.CardView>