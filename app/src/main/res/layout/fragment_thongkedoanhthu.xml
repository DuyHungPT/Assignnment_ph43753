<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bat Dau Tu"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/edtStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chon ngay bat dau" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Den Ngay"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/edtEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ket Thuc" />

    <Button
        android:id="@+id/btnThongKe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thong KE"
        />
    <TextView
        android:id="@+id/txtketqua"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#11D519"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7000 usd"/>


</LinearLayout>